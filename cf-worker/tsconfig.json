{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": false,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "es2017.object",
      "dom",
      "es2019.array",
      "WebWorker"
    ],
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "types": [
      "@cloudflare/workers-types",
      "@types/node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
