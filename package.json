{
  "name": "QuickTrim",
  "version": "0.11.3",
  "main": "./dist/main.js",
  "author": "Stefan-Gabriel Muscalu<stefan.gabriel.muscalu@gmail.com>",
  "description": "Simple to use video trimmer & compressor",
  "scripts": {
    "dev:electron": "NODE_ENV=development webpack --config webpack.electron.config.js --mode development --watch",
    "dev:react": "NODE_ENV=development webpack-dev-server --config webpack.react.config.js --mode development",
    "ffbin": "ffbinaries ffprobe ffmpeg -p linux-64 -o bin/linux-64 && ffbinaries ffprobe ffmpeg -p windows-64 -o bin/windows-64 && ffbinaries ffprobe ffmpeg -p osx-64 -o bin/osx-64",
    "build:js": "NODE_ENV=production webpack --config webpack.electron.config.js --mode production && NODE_ENV=production webpack --config webpack.react.config.js --mode production",
    "build": "yarn build:js && electron-builder --win --linux --mac"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@material-ui/core": "^4.10.2",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@types/color": "^3.0.1",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/uuid": "^8.0.0",
    "babel-loader": "^8.1.0",
    "color": "^3.1.2",
    "css-loader": "^3.5.3",
    "electron": "^9.0.0",
    "electron-builder": "^22.7.0",
    "electron-builder-squirrel-windows": "^22.7.0",
    "electron-updater": "^4.3.1",
    "ffbinaries": "^1.1.4",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "moment": "^2.26.0",
    "nouislider": "^14.5.0",
    "nouislider-react": "^3.3.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-number-format": "^4.4.1",
    "source-map-loader": "^1.0.0",
    "style-loader": "^1.2.1",
    "uuid": "^8.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "ffmpeg-progress-wrapper": "^2.0.0",
    "source-map-support": "^0.5.19",
    "electron-log": "^4.2.2"
  },
  "build": {
    "appId": "rocks.corneroftheinternet.quick-trim",
    "productName": "QuickTrim",
    "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
    "asar": true,
    "files": [
      "dist",
      "icon.png"
    ],
    "directories": {
      "buildResources": "build",
      "output": "out"
    },
    "mac": {
      "category": "public.app-category.video",
      "target": [
        "dir",
        "zip"
      ],
      "icon": "icon.icns",
      "darkModeSupport": true,
      "extraFiles": [
        "bin/osx-64"
      ]
    },
    "win": {
      "target": [
        "msi",
        "dir",
        "zip",
        "nsis"
      ],
      "icon": "icon.ico",
      "extraFiles": [
        "bin/windows-64"
      ]
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "dir",
        "zip"
      ],
      "extraFiles": [
        "bin/linux-64"
      ],
      "executableName": "quicktrim",
      "icon": "icon.png"
    }
  }
}
