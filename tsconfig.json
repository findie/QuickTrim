{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "allowJs": false,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "src/types.d.ts",
  ],
  "exclude": [
    "node_modules",
    "cf-worker",
    "out",
    "build",
    "dist"
  ],
}
